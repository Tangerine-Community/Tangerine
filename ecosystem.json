{
  "apps" : [
    {
      "name"       : "server",
      "script"     : "server/index.js",
      "cwd"        : "./server/",
      "error_file" : "../logs/server-error.log",
      "out_file"   : "../logs/server.log",
      "pid_file"   : "../pids/server.pid"
    },
    {
      "name"      : "tree",
      "script"    : "tree/index.js",
      "cwd"        : "./tree/",
      "error_file" : "tree-error.log",
      "out_file"   : "tree.log",
      "pid_file"   : "tree.pid"
    },
    {
      "name"      : "decompressor",
      "cwd"        : "./decompressor/",
      "script"    : "decompressor/index.js",
      "error_file" : "../logs/decompressor-error.log",
      "out_file"   : "../logs/decompressor.log",
      "pid_file"   : "../pids/decompressor.pid"
    },
    {
      "name"      : "raisin",
      "cwd"        : "./raisin/",
      "script"    : "raisin/microservices/raisin/server.js",
      "error_file" : "../logs/raisin-error.log",
      "out_file"   : "../logs/raisin.log",
      "pid_file"   : "../pids/raisin.pid"
    }
  ],
  "deploy" : {
    "production" : {
      "user" : "node",
      "host" : ["localhost"],
      "ref"  : "origin/master",
      "repo" : "git@github.com:Tangerine-Community/tangerine-server.git",
      "path" : "/www",
      "post-deploy" : "npm install && pm2 startOrRestart ecosystem.json",
      "env" : {
        // Please change .tangerine to match
        "T_COUCH_HOST" : "localhost",
        "T_COUCH_PORT" : 5984,
        "T_ADMIN" : "admin",
        "T_PASS" : "password",
        "T_ROBBERT_PORT" : 4444,
        "T_TREE_PORT" : 4445,
        "T_BROCKMAN_PORT" : 4446,
        "T_CORS_BULK_DOCS_PORT" : 4447,
        "T_PACKAGER_PORT" : 4448,
        "NODE_ENV" : "production"
      }
    }
  }
}
